{
  "name": "@nebula/griffon-plugin-bridge",
  "version": "0.0.1",
  "description": "Communication API between Project Griffon and plugins.",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist && rm -rf lib",
    "build:child": "babel src/child.js --out-file dist/pluginBridge-child.min.js --presets minify",
    "build:libs": "babel src -d lib",
    "build:loader": "babel src/loader.js --out-file dist/pluginBridge.min.js --presets minify",
    "build": "npm run build:libs && npm run build:child && npm run build:loader",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Adobe Systems",
  "license": "Apache-2.0",
  "dependencies": {
    "penpal": "^4.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.5.4",
    "babel-eslint": "^10.0.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2"
  }
}